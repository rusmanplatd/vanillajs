{
  "name": "vanillajs",
  "version": "1.0.0",
  "description": "Vanilla JavaScript project",
  "main": "index.js",
  "scripts": {
    "start": "live-server --port=8080 --open=index.html",
    "dev": "live-server --port=8080",
    "lint": "npm run lint:js && npm run lint:css && npm run lint:html && npm run lint:md",
    "lint:js": "eslint .",
    "lint:css": "stylelint \"**/*.css\"",
    "lint:html": "htmlhint \"**/*.html\"",
    "lint:md": "markdownlint \"**/*.md\" --ignore node_modules --ignore docs",
    "lint:fix": "npm run lint:js:fix && npm run lint:css:fix && npm run format",
    "lint:js:fix": "eslint . --fix",
    "lint:css:fix": "stylelint \"**/*.css\" --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "validate": "npm run lint && npm run format:check",
    "docs": "jsdoc -c jsdoc.json",
    "docs:watch": "nodemon --watch src --exec npm run docs"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsdoc": "^60.7.1",
    "eslint-plugin-prettier": "^5.5.4",
    "htmlhint": "^1.7.1",
    "jsdoc": "^4.0.4",
    "live-server": "^1.2.2",
    "markdownlint-cli": "^0.45.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.2.5",
    "stylelint": "^16.24.0",
    "stylelint-config-standard": "^39.0.0"
  }
}
